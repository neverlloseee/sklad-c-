<Window x:Class="WarehouseTimesheetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Складской табель" Height="760" Width="1250" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#111827" CornerRadius="12" Padding="14" BorderBrush="#334155" BorderThickness="1">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Сотрудники" FontSize="22" FontWeight="SemiBold" Margin="4,0,4,12"/>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                    <TextBlock Text="Имя"/>
                    <TextBox x:Name="NameTextBox" />

                    <TextBlock Text="Дневная ставка (₽)" Margin="0,8,0,0"/>
                    <TextBox x:Name="DailyRateTextBox" Text="0"/>

                    <TextBlock Text="Почасовая ставка (₽)" Margin="0,8,0,0"/>
                    <TextBox x:Name="HourlyRateTextBox" Text="0"/>

                    <CheckBox x:Name="UseHourlyRateCheckBox" Content="Использовать почасовую ставку" Margin="4,8,4,4"/>

                    <WrapPanel Margin="0,8,0,0">
                        <Button Content="Добавить" Width="105" Click="OnAddEmployee"/>
                        <Button Content="Обновить" Width="105" Click="OnUpdateEmployee"/>
                        <Button Content="Удалить" Width="105" Click="OnDeleteEmployee"/>
                    </WrapPanel>
                </StackPanel>

                <ListBox x:Name="EmployeesListBox" SelectionChanged="OnEmployeeSelectionChanged"/>
            </DockPanel>
        </Border>

        <Border Grid.Column="2" Background="#0B1220" CornerRadius="12" Padding="14" BorderBrush="#334155" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Табель и расчёт зарплаты" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <WrapPanel>
                        <TextBlock Text="Месяц:" VerticalAlignment="Center" Margin="4"/>
                        <DatePicker x:Name="MonthDatePicker" SelectedDateChanged="OnMonthChanged" Width="170"/>

                        <TextBlock Text="Часов в смене (глобально):" VerticalAlignment="Center" Margin="20,4,4,4"/>
                        <TextBox x:Name="GlobalHoursTextBox" Width="90" Text="8" TextChanged="OnGlobalHoursChanged"/>
                    </WrapPanel>
                    <TextBlock x:Name="SalaryTextBlock" FontSize="20" FontWeight="Bold" Margin="4,10,4,10"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <UniformGrid x:Name="CalendarGrid" Columns="7"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
