<Window x:Class="WarehouseTimesheetApp.CustomDayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подработка / переработка"
        Height="260"
        Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#070E1E">
    <Border Margin="14" Padding="14" CornerRadius="12" Background="#0F172A" BorderBrush="#334155" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Настройка дня" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

            <CheckBox x:Name="WorkedCheckBox" Grid.Row="1" Content="Сотрудник работал в этот день" Margin="0,0,0,12"/>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Доплата (₽):" Margin="0,0,0,6"/>
                <TextBox x:Name="ExtraTextBox" Text="0"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Отмена" Width="120" Height="40" Click="OnCancel" Background="#1E293B" BorderBrush="#334155" Foreground="#E2E8F0" FontSize="14"/>
                <Button Content="Сохранить" Width="120" Height="40" Click="OnSave" Foreground="#FFFFFF" FontSize="14"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
