<Application x:Class="WarehouseTimesheetApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AppBgBrush" Color="#030712"/>
        <SolidColorBrush x:Key="PanelBgBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#334155"/>

        <Style x:Key="CardPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBgBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
        </Style>

        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource AppBgBrush}"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E2E8F0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="Background" Value="#1D4ED8"/>
            <Setter Property="Foreground" Value="#EFF6FF"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CBD5E1"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Application.Resources>
</Application>
