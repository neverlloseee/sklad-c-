<Window x:Class="WarehouseTimesheetApp.HoursDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Почасовая смена"
        Height="320"
        Width="430"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#070E1E">
    <Border Margin="14" Padding="14" CornerRadius="12" Background="#0F172A" BorderBrush="#334155" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Почасовая отметка" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

            <CheckBox x:Name="WorkedCheckBox" Grid.Row="1" Content="Сотрудник работал" Margin="0,0,0,12"/>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Отработанные часы:" Margin="0,0,0,6"/>
                <TextBox x:Name="HoursTextBox" Text="8"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,12,0,0">
                <TextBlock Text="Доплата (₽):" Margin="0,0,0,6"/>
                <TextBox x:Name="ExtraTextBox" Text="0"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Отмена" Width="120" Click="OnCancel" Background="#1E293B" BorderBrush="#334155"/>
                <Button Content="Сохранить" Width="120" Click="OnSave"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
